<div class="container justify-content-center w-50">
  <div class="card p-3 mt-3 ml-3 mr-3 mb-2">
    <h2 class="mt-3 mb-3">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "john@giggle.com" %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, placeholder: " *****" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

      <div class="form-actions">
         <%= f.button :submit, "Log in", class: 'btn btn-secondary w-50 mb-2 w-100 mt-3 mb-3' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
